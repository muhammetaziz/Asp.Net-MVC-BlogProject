@model EntityLayer.Concrate.Category 
@{
    ViewBag.Title = "AdminCategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />

    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x => x.CategoryDescription, 5, 30, new { @class = "form-control" })
    <br />
    <button class="btn btn-success"> Kaydet</button>
</form>