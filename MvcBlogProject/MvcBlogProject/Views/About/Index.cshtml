@model IEnumerable<EntityLayer.Concrate.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">En iyi ve tecrübeli ekiple tanışmaya hazır olun...</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Biz Kimiz ?</h2>
                    <p>@item.AboutContent1</p>
                    <ul class="ul-check list-unstyled success">
                        <li>Tecrübeli editörler</li>
                        <li>Günkük 14000 görüntülenme</li>
                        <li>Dinamik blog içerikleri</li>
                        <li>Onlarca farklı ülkeden ziyaretçi</li>
                        <li>Sosyal medyada 1M Abone</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("MeetTheTeam", "About")
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <img src="@item.AboutImage2" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 ml-auto">
                    <h2>Amacımız</h2>
                    <p class="mb-4">@item.AboutContent2</p>
                </div>
            }
        </div>
    </div>
</div>
@Html.Action("AddMail", "MailSubscribe")
@Html.Action("Footer", "About")
