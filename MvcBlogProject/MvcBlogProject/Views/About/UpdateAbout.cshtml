@model IEnumerable<EntityLayer.Concrate.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Hakkımızda</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                @using (Html.BeginForm("UpdateAbout","About",FormMethod.Post))
                {
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                        <div hidden class="form-group">
                            <label for="inputDescription">Hakkımızda 1</label>
                            <textarea name="AboutID" class="form-control" rows="4">@item.AboutID</textarea>
                        </div>
                            <div class="form-group">
                                <label for="inputDescription">Hakkımızda 1</label>
                                <textarea name="AboutContent1" class="form-control" rows="4">@item.AboutContent1</textarea>
                            </div>
                            <div class="form-group">
                                <label for="inputDescription">Hakkımızda 2</label>
                                <textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>
                            </div>
                            <div class="form-group">
                                <label for="inputName">Görsel 1</label>
                                <input type="text" name="AboutImage1" class="form-control" value="@item.AboutImage1">
                            </div>
                            <div class="form-group">
                                <label for="inputName">Görsel 2</label>
                                <input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">
                            </div>
                        }
                        <br />
                        <button class="btn btn-success"  >Güncelle</button>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

