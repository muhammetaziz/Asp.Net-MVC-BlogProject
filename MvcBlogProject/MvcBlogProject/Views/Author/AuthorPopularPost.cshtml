@model IEnumerable<EntityLayer.Concrate.Blog>
<div class="sidebar-box">
    <h3 class="heading">Yazarın diğer postları</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {


                <li>
                    <a href="/Blog/BlogDetails/@item.BlogID">
                        <img src="@item.blogImage" alt="Image placeholder" class="mr-4">
                        <div class="text">
                            <h4>@item.BlogTitle</h4>
                            <div class="post-meta">
                                <span class="mr-2">@item.BlogDate.ToShortDateString()</span>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>