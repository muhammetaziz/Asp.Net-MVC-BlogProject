@model IEnumerable<EntityLayer.Concrate.Comment>
@{
    ViewBag.Title = "AdminCommentLitst";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="glyphicon-header">Yorumlar</h2>

<section class="content">
    <div class="row">
        <div class="card col-12">
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Yorum Sahibi</th>
                            <th>E-mail</th>
                            <th>Yorum</th>
                            <th>Yorum Yapılan Blog</th>
                            <th>Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                         
                            <tr>
                                <td>@item.UserName</td>
                                <td><a target="_blank" style="color:inherit" href="mailto:@item.Mail">@item.Mail</a></td>
                                <td>@item.CommentText</td>
                                <td><a href="/Blog/BlogDetails/@item.BlogID"> @item.Blog.BlogTitle</a></td>
                                <td>@item.CommentDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Yorum Sahibi</th>
                            <th>E-mail</th>
                            <th>Yorum</th>
                            <th>Yorum Yapılan Blog</th>
                            <th>Tarih</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

